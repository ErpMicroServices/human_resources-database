{
  "name": "human_resources-database",
  "version": "1.0.0",
  "description": "Data for the Human Resources domain",
  "author": {
    "name": "Jim Barrows",
    "email": "Jim.Barrows@gmail.copm"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build": "npm run build:database && npm run build:docker",
    "build:docker": "docker build --tag erpmicroservices/human-resources-database --rm .",
    "build:database": "mkdir -p build && cat sql/V_huma*.sql > build/database_up.sql",
    "clean": "rm -rf build && rm -rf generated-sql && yes | docker rmi --force erpmicroservices/human-resources-database && yes | docker volume prune && docker rm human-resources-database",
    "migrate": "npx flyway -configFiles=flyway.conf -url=jdbc:postgresql://${DB_HOST:-localhost}:${DB_PORT:-5432}/${DB_NAME:-human_resources} -user=${DB_USER:-human_resources} -password=${DB_PASSWORD:-human_resources} migrate",
    "migrate:info": "npx flyway -configFiles=flyway.conf -url=jdbc:postgresql://${DB_HOST:-localhost}:${DB_PORT:-5432}/${DB_NAME:-human_resources} -user=${DB_USER:-human_resources} -password=${DB_PASSWORD:-human_resources} info",
    "migrate:validate": "npx flyway -configFiles=flyway.conf -url=jdbc:postgresql://${DB_HOST:-localhost}:${DB_PORT:-5432}/${DB_NAME:-human_resources} -user=${DB_USER:-human_resources} -password=${DB_PASSWORD:-human_resources} validate",
    "push": "docker push erpmicroservices/human-resources-database:latest",
    "start": "docker run --publish 5432:5432 --name human-resources-database erpmicroservices/human-resources-database",
    "test": "cucumber-js --tags @human_resources-database  --require-module @babel/register --require-module @babel/polyfill  -r ./features ../human_resources-features"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ErpMicroServices/human-resources-database.git"
  },
  "bugs": {
    "url": "https://github.com/ErpMicroServices/human-resources-database/issues"
  },
  "homepage": "https://github.com/ErpMicroServices/human-resources-database#readme",
  "devDependencies": {
    "@cucumber/cucumber": "^7.0.0",
    "babel-cli": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "braces": ">=2.3.1",
    "chai": "^4.2.0",
    "dotenv": "^16.0.3",
    "node-flywaydb": "^3.0.7",
    "pg-promise": "^10.7.0"
  }
}
